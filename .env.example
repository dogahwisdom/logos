# Required for Gemini analysis (server-side only; never exposed to client)
GEMINI_API_KEY=

# Optional: Google OAuth (Supabase / sign-in with Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Supabase (client: VITE_*; server: SUPABASE_URL + SUPABASE_SERVICE_ROLE_KEY)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional: Restrict custom AI proxy (comma-separated base URLs, e.g. https://api.openai.com)
ALLOWED_CUSTOM_AI_BASE_URLS=

# Optional: App origin for OAuth redirect validation (e.g. https://app.example.com)
APP_ORIGIN=

# Production: API base URL when frontend is served from a different origin (e.g. Netlify)
# Leave empty when API and frontend are same origin (e.g. local or single-server deploy)
VITE_API_URL=
